      fallback: 'serif',
      cssVariable: 'font-headings',
    },
    {
      name: 'SF Pro Display',
      src: [
        {
          weight: '500',
          style: 'normal',
          path: join(process.cwd(), 'public', 'fonts', 'SF-Pro-Display-Medium.woff2'),
